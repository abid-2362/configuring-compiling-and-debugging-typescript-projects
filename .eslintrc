{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "airbnb-typescript/base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "prettier/prettier": "error",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "__test__/**",
          "jest/customTestSequencer.js"
        ]
      }
    ]
  },
  "plugins": [
    "prettier"
  ]
}
